{{#if isShowingNewAttendeeCalendar}}
  {{new-attendee-form event=event createAttendee="createAttendee" class="new-attendee"}}
  <span class="divider"></span>
  {{#if hasAttendees}}
    <button {{action "toggleCalendars"}} class="button button--inverse event-calendars__toggle">View available dates for attendees</button>
  {{/if}}
{{else}}
  {{attendees-availabilities event=event class="attendees-availabilities"}}
  <span class="divider"></span>
  <button {{action "toggleCalendars"}} class="button button--inverse event-calendars__toggle">Hey, share the dates that you're available ok?</button>
{{/if}}
