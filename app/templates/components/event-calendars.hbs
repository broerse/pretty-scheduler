{{#if isShowingNewAttendeeCalendar}}
  {{new-attendee-form event=event createAttendee="createAttendee" class="new-attendee"}}
  <button {{action "toggleCalendars"}} class="event-calendars__toggle">View available dates for attendees</button>
{{else}}
  {{attendees-availabilities event=event class="attendees-availabilities"}}
  <button {{action "toggleCalendars"}} class="event-calendars__toggle">Hey, share the dates that you're available ok?</button>
{{/if}}
