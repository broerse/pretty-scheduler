{{#liquid-if isShowingNewAttendeeCalendar use="fade"}}
  {{new-attendee-form event=event createAttendee=(route-action "createAttendee") class="new-attendee"}}
  <span class="divider divider--purple"></span>
  {{#if hasAttendees}}
    <button {{action "toggleCalendars"}} class="button button--inverse button--inverse-purple event-calendars__toggle">Check out the dates that attendees are available yo!</button>
  {{/if}}
{{else}}
  {{attendees-availabilities event=event class="attendees-availabilities"}}
  <span class="divider divider--purple"></span>
  <button {{action "toggleCalendars"}} class="button button--inverse button--inverse-purple event-calendars__toggle">Hey share the dates that you're available ok?</button>
{{/liquid-if}}
