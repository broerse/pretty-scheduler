<p class="month-calendar__heading month-calendar__heading--selectable">
  {{monthName}} <sub class="month-calendar__year">{{year}}</sub>
</p>

<div>
  <div class="month-calendar__day month-calendar__day--select-day">sun</div>
  <div class="month-calendar__day month-calendar__day--select-day">mon</div>
  <div class="month-calendar__day month-calendar__day--select-day">tue</div>
  <div class="month-calendar__day month-calendar__day--select-day">wed</div>
  <div class="month-calendar__day month-calendar__day--select-day">thu</div>
  <div class="month-calendar__day month-calendar__day--select-day">fri</div>
  <div class="month-calendar__day month-calendar__day--select-day">sat</div>
</div>
{{#each daysInMonth as |week|}}
  <div>
  {{#each week as |date|}}
    {{selectable-day
        date=date
        startDate=startDate
        endDate=endDate
        selectedDates=selectedDates
        clickedDate="clickedDate"}}
  {{/each}}
  </div>
{{/each}}
